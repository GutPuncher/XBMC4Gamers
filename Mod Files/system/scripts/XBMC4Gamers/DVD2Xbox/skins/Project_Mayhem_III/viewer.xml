<screen>
		<!-- Background -->
		<item>
				<type>image</type>
				<posX>0</posX>
				<posY>0</posY>
				<width>640</width>
				<height>90</height>
				<texture>background_Top2</texture>
		</item>
		<item>
				<type>image</type>
				<posX>0</posX>
				<posY>400</posY>
				<width>640</width>
				<height>90</height>
				<texture>background_Top2</texture>
		</item>
		<!-- File Name Display -->
		<item>
				<type>text</type>
				<posX>40</posX>
				<posY>60</posY>
				<color>FFB6FF00</color>
				<text>${filename}</text>
				<font>font1</font>
		</item>
		<!-- Row Highlight -->
		<item>
				<type>rect</type>
				<showID>1</showID>
				<relX>-10</relX>
				<relY>0</relY>
				<width>570</width>
				<height>15</height>
				<fillcolor>FF676767</fillcolor>
				<color>FF676767</color>
		</item>
		<!-- File's Text Display-->
		<item>
				<type>viewer</type>
				<posX>40</posX>
				<posY>95</posY>
				<width>590</width>
				<color>FFFFFFFF</color>
				<highlight>FF66FF99</highlight>
				<font>fontb</font>
		</item>
		<!-- Row Number Display -->
		<item>
				<type>text</type>
				<posX>40</posX>
				<posY>410</posY>
				<color>FFB6FF00</color>
				<text>Row (${row}/${allrows})\\nColumn (${col}/${allcols})</text>
				<font>Arial_10</font>
		</item>
</screen>