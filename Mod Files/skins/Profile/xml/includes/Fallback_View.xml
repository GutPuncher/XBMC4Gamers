<include name="fallback_view_labels">
	<control type="label">
		<left>0</left>
		<top>615</top>
		<width>1280</width>
		<height>36</height>
		<font>size_35</font>
		<textcolor>$VAR[Alt_Label_Colour]</textcolor>
		<scroll>true</scroll>
