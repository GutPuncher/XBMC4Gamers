<!-- Context_Buttons.xml -->
<include name="Context_Buttons">
	<control type="group">
		<visible>!Skin.HasSetting(HideContextBar)</visible>
		<animation effect="slide" start="0,0" end="0,30" time="100">WindowClose</animation>
		<animation effect="slide" start="0,30" end="0,0" time="100" delay="100">WindowOpen</animation>
		<control type="image">
			<left>0</left>
			<bottom>30</bottom>
			<width>1280</width>
			<height>30</height>
			<texture>pad_buttons\underlay.png</texture>
			<visible>!Window.IsActive(1112) + !Window.IsActive(129)</visible>
			<animation effect="slide" start="0,0" end="0,30" time="100" condition="Window.IsActive(1112) + !Window.IsActive(129)">Hidden</animation>
			<animation effect="slide" start="0,30" end="0,0" time="100" delay="100" condition="!Window.IsActive(1112) + !Window.IsActive(129)">Visible</animation>
		</control>
		<control type="grouplist">
			<description>Control Info</description>
			<left>10</left>
			<bottom>25</bottom>
			<width>1280</width>
			<height>80</height>
			<itemgap>10</itemgap>
			<orientation>Horizontal</orientation>
			<visible>!Window.IsActive(1112) + !Window.IsActive(129)</visible>
			<animation effect="slide" start="0,0" end="0,30" time="100" condition="Window.IsActive(1112) + !Window.IsActive(129)">Hidden</animation>
			<animation effect="slide" start="0,30" end="0,0" time="100" delay="100" condition="!Window.IsActive(1112) + !Window.IsActive(129)">Visible</animation>
			<!-- A Button -->
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>22</width>
				<height>22</height>
				<texture>pad_buttons\a_button.png</texture>
				<aspectratio>keep</aspectratio>
			</control>
			<control type="label">
				<left>0</left>
				<top>0</top>
				<width min="40" max="250">auto</width>
				<height>22</height>
				<font>size_14</font>
				<aligny>center</aligny>
				<textcolor>context_buttons_label</textcolor>
				<label>$LOCALIZE[31106]</label>
				<visible>!Window.IsActive(Home)</visible>
			</control>
			<control type="label">
				<left>0</left>
				<top>0</top>
				<width min="40" max="250">auto</width>
				<height>22</height>
				<font>size_14</font>
				<aligny>center</aligny>
				<textcolor>context_buttons_label</textcolor>
				<label>$LOCALIZE[31106]</label>
				<visible>Window.IsActive(Home) + !Control.HasFocus(9001) + !Control.HasFocus(9002)</visible>
			</control>
			<control type="label">
				<left>0</left>
				<top>0</top>
				<width min="40" max="250">auto</width>
				<height>22</height>
				<font>size_14</font>
				<aligny>center</aligny>
				<textcolor>context_buttons_label</textcolor>
				<label>$LOCALIZE[31126]</label>
				<visible>Window.IsActive(Home) + Control.HasFocus(9001) | Control.HasFocus(9002)</visible>
			</control>
			<!-- B Button -->
			<control type="image">
				<left>0</left>
				<top>0</top>
				<width>22</width>
				<height>22</height>
				<texture>pad_buttons\b_button.png</texture>
				<aspectratio>keep</aspectratio>
				<visible>[Window.IsActive(Home) + Control.HasFocus(9001) | Control.HasFocus(9002)] + [!SubString(ListItem.FolderPath,multipath,left) | StringCompare(Skin.String(HomeWindowSource),Home)]</visible>
