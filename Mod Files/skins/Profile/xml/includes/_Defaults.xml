<include name="Fanart">
	<!-- These must be "largeimage" or backgrounded. If not you will get a application render exception crash due to the fog image lol -->
	<control type="group">
		<visible>Skin.HasSetting(fanartenabled) + ![Control.IsVisible(54) | Control.IsVisible(55) | Control.IsVisible(56) | Control.IsVisible(57) | Control.IsVisible(61) | Control.IsVisible(71) | Control.IsVisible(72) | Control.IsVisible(73) | Control.IsVisible(74) | Control.IsVisible(79) | Window.IsVisible(134) | Window.IsVisible(3000)]</visible>
		<control type="group">
			<visible>!Skin.HasSetting(higherfanart) + !Skin.HasSetting(fadedfanart)</visible>
			<control type="image">
				<include>1280x720</include>
				<fadetime>FanartCrossfadeTime</fadetime>
				<aspectratio scalediffuse="false">stretch</aspectratio>
				<texture background="true" diffuse="fanart_low_diffuse.png">$VAR[View_Fanart]</texture>
			</control>
			<control type="image">
				<include>1280x720</include>
				<fadetime>FanartCrossfadeTime</fadetime>
				<aspectratio scalediffuse="false">stretch</aspectratio>
				<texture background="true" diffuse="fanart_low_diffuse_Custom.png">$VAR[View_Fanart_Fog]</texture>
				<visible>Skin.HasSetting(customfanartfog)</visible>
			</control>
		</control>
		<control type="group">
			<visible>Skin.HasSetting(higherfanart) + !Skin.HasSetting(fadedfanart)</visible>
			<control type="image">
				<include>1280x720</include>
				<fadetime>FanartCrossfadeTime</fadetime>
				<aspectratio scalediffuse="false">stretch</aspectratio>
				<texture background="true" diffuse="fanart_diffuse.png">$VAR[View_Fanart]</texture>
			</control>
			<control type="image">
				<include>1280x720</include>
				<fadetime>FanartCrossfadeTime</fadetime>
				<aspectratio scalediffuse="false">stretch</aspectratio>
				<texture background="true" diffuse="fanart_diffuse_Custom.png">$VAR[View_Fanart_Fog]</texture>
				<visible>Skin.HasSetting(customfanartfog)</visible>
			</control>
		</control>
		<control type="group">
			<visible>Skin.HasSetting(fadedfanart)</visible>
			<control type="image">
				<include>1280x720</include>
				<colordiffuse>30FFFFFF</colordiffuse>
				<fadetime>FanartCrossfadeTime</fadetime>
				<aspectratio scalediffuse="false">stretch</aspectratio>
				<texture background="true" diffuse="fanart_faded_diffuse.png">$VAR[View_Fanart]</texture>
			</control>
		</control>
	</control>
