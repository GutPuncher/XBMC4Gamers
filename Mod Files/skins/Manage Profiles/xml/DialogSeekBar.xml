<window id="115">
	<defaultcontrol>1</defaultcontrol>
	<visible>Player.Seeking | Player.DisplayAfterSeek | Player.Forwarding | Player.Rewinding</visible>
	<coordinates>
		<system>1</system>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<!-- Player Controls are visible -->
		<control type="group">
			<animation effect="slide" start="0,0" end="0,87" delay="0" time="250" tween="Quadratic" easing="out" condition="Skin.HasSetting(newplayer_large_artwork)">Conditional</animation>
			<control type="group">
				<left>452</left>
				<top>119</top>
				<control type="slider" id="401">
					<description>Seek Slider</description>
					<left>1</left>
					<top>-2</top>
					<width>373</width>
					<height>10</height>
					<colordiffuse>115_diffuse</colordiffuse>
					<texturesliderbar>seekslider.png</texturesliderbar>
					<textureslidernib>slider_nibFO.png</textureslidernib>
					<textureslidernibfocus>slider_nibFO.png</textureslidernibfocus>
					<visible>Window.IsActive(114) + !Skin.HasSetting(OldPlayerControls)</visible>
				</control>
			</control>
		</control>
		<control type="group">
			<left>452</left>
			<top>0</top>
			<animation effect="slide" start="0,-301" end="0,0" delay="10" time="250" tween="Quadratic" easing="out">WindowOpen</animation>
			<animation effect="slide" start="0,0" end="0,-115" delay="170" time="250" tween="Quadratic" easing="out">WindowClose</animation>
			<visible>!Window.IsActive(114)</visible>
			<control type="group">
				<control type="image">
					<left>0</left>
					<top>-75</top>
					<width>375</width>
					<height>119</height>
					<texture>new player\upper_overlay.png</texture>
				</control>
				<control type="image">
					<left>327</left>
					<top>7</top>
					<width>36</width>
					<height>36</height>
					<aspectratio>stretch</aspectratio>
					<texture diffuse="new player\seek_icon_diffuse.png">$INFO[musicplayer.cover]</texture>
				</control>
				<control type="label">
					<description>Seeking Label</description>
					<left>0</left>
					<top>-15</top>
					<width>375</width>
					<height>50</height>
					<align>center</align>
					<aligny>center</aligny>
					<textcolor>115_label</textcolor>
					<font>size_14</font>
					<label>[UPPERCASE]$LOCALIZE[773][/UPPERCASE]</label>
				</control>
				<!-- progressbar dialog -->
				<control type="label">
					<description>Elapsed Time Label</description>
					<left>10</left>
					<top>5</top>
					<width>110</width>
					<height>20</height>
					<font>size_15</font>
					<align>left</align>
					<aligny>center</aligny>
					<textcolor>115_label</textcolor>
					<info>Player.Time</info>
					<visible>!Player.Seeking</visible>
				</control>
				<control type="label">
					<description>Seek Time Label</description>
					<left>10</left>
					<top>5</top>
					<width>110</width>
					<height>20</height>
					<font>size_15</font>
					<align>left</align>
					<aligny>center</aligny>
					<textcolor>115_label</textcolor>
					<info>Player.SeekTime</info>
					<visible>Player.Seeking</visible>
				</control>
				<control type="label">
					<description>Duration Label</description>
					<left>365</left>
					<top>5</top>
					<width>130</width>
					<height>20</height>
					<info>Player.Duration</info>
					<font>size_15</font>
					<align>right</align>
					<textcolor>115_label</textcolor>
					<aligny>center</aligny>
				</control>
				<control type="progress">
					<description>Progressbar</description>
					<left>10</left>
					<top>25</top>
					<width>310</width>
					<height>5</height>
					<info>Player.Progress</info>
					<texturebg border="1,1,1,1">new player\progress_underlay.png</texturebg>
					<midtexture border="1,1,1,1">new player\progress_overlay.png</midtexture>
					<lefttexture>-</lefttexture>
					<righttexture>-</righttexture>
					<visible>true</visible>
				</control>
				<control type="slider" id="401">
					<description>Seek Slider</description>
					<left>10</left>
					<top>25</top>
					<width>310</width>
					<height>12</height>
					<texturesliderbar>seekslider.png</texturesliderbar>
					<textureslidernib>slider_nibFO.png</textureslidernib>
					<textureslidernibfocus>slider_nibFO.png</textureslidernibfocus>
					<onup>1</onup>
					<ondown>1</ondown>
					<onleft>1</onleft>
					<onright>1</onright>
					<visible>Player.Seeking</visible>
				</control>
			</control>
		</control>
	</controls>
</window>